<block>
    <block wx:if="{{showLoading}}">
        <view class="page-loading"><text class="weui-loading"></text><text class="loading-text">玩命加载中</text>
        </view>
    </block>
    <block wx:else>
        <view scroll-y="true" class="film-list">
            <view class="film-item" bindtap="viewDetail" data-id="{{film.id}}" data-title="{{film.title}}" wx:for="{{films}}" wx:for-item="film">
                <view class="film-image">
                    <image src="{{film.images.medium}}"></image>
                </view>
                <view class="film-info">
                    <view><text class="film-title">{{film.title}}</text><text class="film-year">{{film.year}}</text>
                    </view>
                    <view class="film-rating">
                        <block>
                            <block wx:if="{{film.rating.average > 0}}">
                                <block><text class="label">评分</text><text class="rating">{{film.rating.average}}</text>
                                </block>
                            </block>
                            <block wx:else><text class="label">暂无评分</text>
                            </block>
                        </block>
                    </view>
                    <view class="directors"><text class="label">导演</text><text class="person" wx:for="{{film.directors}}" wx:for-item="director">{{director.name}}</text>
                    </view>
                    <view class="casts"><text class="label">主演</text><text class="person" wx:for="{{film.casts}}" wx:for-item="cast">{{cast.name}}</text>
                    </view>
                </view>
            </view>
            <view class="load-more-wrap">
                <block>
                    <block wx:if="{{hasMore}}">
                        <view class="load-content"><text class="weui-loading"></text><text class="loading-text">玩命加载中</text>
                        </view>
                    </block>
                    <block wx:else>
                        <view class="load-content"><text>没有更多内容了</text>
                        </view>
                    </block>
                </block>
            </view>
        </view>
    </block>
</block>